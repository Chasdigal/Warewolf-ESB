<ig:XamDialogWindow x:Class="Warewolf.Studio.Views.DbSyntaxEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:Warewolf.Studio.Views"
             xmlns:ig="http://schemas.infragistics.com/xaml"
                   CloseButtonVisibility="Collapsed"
                    HeaderIconVisibility="Collapsed"
                    MaximizeButtonVisibility="Collapsed"
                    MinimizeButtonVisibility="Collapsed"
                    Header="Action inspector"
             Style="{StaticResource XamDialogWindowStyle}"
             mc:Ignorable="d" 
                            Width="900"
                    Height="420"
             d:DesignHeight="600" d:DesignWidth="450">
    <ig:XamDialogWindow.Resources>
        <views:EnumToBoolConverter x:Key="EnumToBoolConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </ig:XamDialogWindow.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
        </Grid.ColumnDefinitions>
       <!--<StackPanel Grid.Row="TODO" Background="{StaticResource WareWolfMenuBrush}" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock Text="Action Inspector" Style="{StaticResource SourceHeader}" />
        </StackPanel>-->
        <ig:XamSyntaxEditor x:Name="SyntaxEditor" Grid.Row="1" Grid.Column="1" 
            SplitOptions="SplittingNotAllowed" ErrorDisplayMode="Never" BorderThickness="1" IsLineNumberMarginVisible="False" >
            
            
            </ig:XamSyntaxEditor>
        <Button Grid.Row="3" Width="80" Grid.Column="1" HorizontalAlignment="Right" Height="40" VerticalAlignment="Top" Click="Button_Click">Close</Button>
    </Grid>
</ig:XamDialogWindow>
